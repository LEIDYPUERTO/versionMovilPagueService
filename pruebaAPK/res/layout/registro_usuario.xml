<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E90FF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pageservice.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/textView1"
                android:src="@drawable/service" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="73dp"
                android:text="PagueService"
                android:textColor="#000000"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtCedulaRegistro"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="Cedula"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtNombreRegistro"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/TextView01"
                android:layout_alignBottom="@+id/TextView01"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:hint="Nombre y Apellido"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtPasswordRegistro"
                android:layout_alignLeft="@+id/textView3"
                android:layout_marginBottom="22dp"
                android:text="Genero"
                android:textColor="#000000" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtPasswordRegistro"
                android:layout_alignRight="@+id/textView1" >

                <RadioButton
                    android:id="@+id/btnFemenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino" />

                <RadioButton
                    android:id="@+id/btnMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Masculino" />
            </RadioGroup>

            <EditText
                android:id="@+id/txtPasswordRegistro"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtNombreBanco"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre Banco" />

            <EditText
                android:id="@+id/txtNumeroCuenta"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero Cuenta" />

            <Button
                android:id="@+id/btnFinalizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="Finalizar" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>